    <div class="user-profile-card">
        <%= image_tag(
            user.logo.attached? ? user.logo : "default_logo.png", 
            alt: "#{user.company_name}'s profile picture", 
            class: "rounded-circle user-avatar", 
            style: "width:150px; height:150px; object-fit: cover;"
        ) %>
        
        <div class="user-details">
            <h4 class="mb-1"><%= user.first_name %></h4>
            <p class="text-muted mb-3"><%= user.position %></p>
            
            <div class="profile-info-row">
                <span class="profile-label"><%= t('users.profile.name') %>:</span>
                <span class="profile-info"><%= user.first_name %></span>
            </div>
            
            <div class="profile-info-row">
                <span class="profile-label">Position:</span>
                <span class="profile-info"><%= user.position %></span>
            </div>
            
            <div class="profile-info-row">
                <span class="profile-label">Email:</span>
                <span class="profile-info">
                    <%= mail_to user.email, user.email, class: "text-primary" %>
                </span>
            </div>
            
            <div class="profile-info-row">
                <span class="profile-label"><%= t('users.profile.member') %>:</span>
                <span class="profile-info">
                    <%= user.created_at.strftime("%B %d, %Y") %>
                </span>
            </div>
            
            <div class="profile-info-row">
                <span class="profile-label">Address:</span>
                <span class="profile-info"><%= user.address %></span>
            </div>
        </div>
    </div>
  <style>
        .user-profile-card {
            background-color: #f8f9fa;
            border-radius: 12px;
            padding: 2rem;
            text-align: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        
        .user-avatar {
            border: 4px solid #e9ecef;
            margin-bottom: 1rem;
        }
        
        .user-details {
            margin-top: 1rem;
        }
        
        .profile-label {
            color: #6c757d;
            font-weight: 500;
            margin-right: 0.5rem;
        }
        
        .profile-info {
            color: #343a40;
        }
        
        .profile-info-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.5rem;
            padding: 0.5rem 0;
            border-bottom: 1px solid #e9ecef;
        }
    </style>
