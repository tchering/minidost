<%# app/views/devise/sessions/new.html.erb %>
<div class="login-form container-fluid py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <div class="login-form__card card shadow-lg border-0 rounded-4">
        
        <div class="login-form__header card-header bg-gradient p-4 border-0">
          <h2 class="login-form__title text-white mb-0 fw-bold">
            <i class="fas fa-sign-in-alt me-2"></i>Login
          </h2>
        </div>

        <div class="login-form__body card-body p-4">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), 
              html: { class: "login-form__form" }) do |f| %>
            
            <div class="login-form__field form-outline mb-4">
              <%= f.email_field :email, autofocus: true, 
                  class: "form-control form-control-lg login-form__input",
                  autocomplete: "email" %>
              <%= f.label :email, class: "form-label login-form__label" %>
            </div>

            <div class="login-form__field form-outline mb-4">
              <%= f.password_field :password,
                  class: "form-control form-control-lg login-form__input",
                  autocomplete: "current-password" %>
              <%= f.label :password, class: "form-label login-form__label" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="login-form__remember form-check mb-4">
                <%= f.check_box :remember_me, 
                    class: "form-check-input login-form__checkbox" %>
                <%= f.label :remember_me, 
                    class: "form-check-label login-form__checkbox-label" %>
              </div>
            <% end %>

            <div class="login-form__actions d-grid gap-2">
              <%= f.submit "Log in", 
                  class: "btn btn-primary btn-lg login-form__submit" %>
            </div>
          <% end %>
        </div>

        <div class="login-form__footer card-footer bg-light p-4 border-0">
          <%= render "devise/shared/links" %>
        </div>
        
      </div>
    </div>
  </div>
</div>