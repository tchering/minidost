<%= turbo_frame_tag "bio_form_frame" do %>
  <div class="card shadow-2-strong h-100" data-mdb-animation="fade-in">
    <div class="card-body p-4">
      <div class="d-flex align-items-center mb-4" role="heading" aria-level="2">
        <h5 class="mb-0 text-dark">Bio</h5>
      </div>
      <% if user.bio.present? %>
        <div class="mb-4">
          <p class="text-muted mb-4 lead" style="line-height: 1.6;">
            <%= user.bio.text %>
          </p>
          <% if current_user == user %>
            <%= link_to edit_bio_path(user.bio),
                class: "btn btn-outline-primary btn-floating ripple-surface",
                data: { 
                  turbo_frame: "bio_form_frame",
                  turbo_method: :get,
                  mdb_toggle: "tooltip",
                  mdb_placement: "top"
                },
                title: t("bios.button.edit") do %>
              <i class="fas fa-edit"></i>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-4">
          <div class="mb-4">
            <div class="bg-light rounded-circle mx-auto d-flex align-items-center justify-content-center" 
                 style="width: 80px; height: 80px;">
              <i class="fas fa-file-alt text-muted fa-2x"></i>
            </div>
          </div>
          <p class="text-muted mb-4">
            <i class="fas fa-info-circle me-2"></i>
            No professional bio available.
          </p>
          <% if current_user == user %>
            <%= link_to new_bio_path,
                class: "btn btn-warning shadow-3 ripple-surface",
                data: { turbo_frame: "bio_form_frame" } do %>
              <i class="fas fa-plus-circle me-2"></i>
              Create Bio
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
<style>
  [data-mdb-animation="fade-in"] {
    animation: fadeIn 0.5s ease-out;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>