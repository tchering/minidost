<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-light sticky-top">
  <!-- Container wrapper -->
  <div class="container-fluid">
    <!-- Toggle button -->
    <button data-mdb-collapse-init 
      class="navbar-toggler"
      type="button"
      data-mdb-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
                        aria-label="Toggle navigation">
      <i class="fas fa-bars"></i>
    </button>
    <!-- Collapsible wrapper -->
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <!-- Navbar brand -->
      <%= link_to root_path,
                        id: "navbarSupportedContent",
                        class: "navbar-brand mt-2 mt-lg-0 text-primary fs-2 d-flex align-items-center" do %>
        <i class="fas fa-building me-2"></i>
        <span class="fw-bold">MiniDost Enterprise</span>
      <% end %>
      <!-- Left links -->
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <% if user_signed_in? %>
          <li class="nav-item">
            <a class="nav-link text-primary" href="#">Dashboard</a>
          </li>
        <% end %>
        <li class="nav-item">
          <a class="nav-link text-primary" href="#">Team</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-primary" href="#">Projects</a>
        </li>
        <li class="nav-item">
          <%= link_to "About", about_path, class: "nav-link text-primary" %>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Logout", destroy_user_session_path,data:{turbo_method: :delete}, class: "nav-link text-primary" %>
          </li>
          <li class="nav-item">
            <%= link_to "Edit", edit_user_registration_path,class:"nav-link text-primary" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link text-primary" %>
          </li>
        <% end %>
      </li>
    </ul>
  </div>
  <!-- Right elements -->
  <div class="d-flex align-items-center">
    <!-- Notifications -->
    <div class="dropdown">
      <a data-mdb-dropdown-init
                    class="text-primary me-3 dropdown-toggle hidden-arrow"
          href="#"
          id="navbarDropdownMenuLink"
          role="button"
                     aria-expanded="false">
        <i class="fas fa-bell"></i>
        <span class="badge rounded-pill badge-notification bg-danger">1</span>
      </a>
      <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuLink">
        <li><a class="dropdown-item" href="#">Some news</a></li>
        <li><a class="dropdown-item" href="#">Another news</a></li>
        <li><a class="dropdown-item" href="#">Something else here</a></li>
      </ul>
    </div>
    <!-- Language selector -->
    <ul class="navbar-nav">
      <li class="nav-item dropdown">
        <a data-mdb-dropdown-init
             class="nav-link dropdown-toggle"
             href="#"
             id="navbarDropdown"
             role="button"
             aria-expanded="false">
          <i class="<%= current_locale_flag %> flag m-0"></i>
        </a>
        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
          <li>
            <%= link_to url_for(locale: :en, params: request.query_parameters), class: "dropdown-item #{I18n.locale == :en ? 'active' : ''}" do %>
              <i class="flag-united-kingdom flag"></i>English
              <%= '<i class="fas fa-check text-success ms-2"></i>'.html_safe if I18n.locale == :en %>
            <% end %>
          </li>
          <li><hr class="dropdown-divider"></li>
          <li>
            <%= link_to url_for(locale: :fr, params: request.query_parameters), class: "dropdown-item #{I18n.locale == :fr ? 'active' : ''}" do %>
              <i class="flag-france flag"></i>French
              <%= '<i class="fas fa-check text-success ms-2"></i>'.html_safe if I18n.locale == :fr %>
            <% end %>
          </li>
        </ul>
      </li>
    </ul>
  </div>
</div>
</nav>
