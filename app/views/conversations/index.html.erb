<%# # app/views/conversations/index.html.erb %>
<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm rounded-3">
        <div class="card-header bg-gradient bg-primary text-white p-3">
          <h4 class="mb-0 fw-bold">Conversations</h4>
        </div>
        <div class="card-body p-0">
          <% if @conversations.empty? %>
            <div class="text-center p-5">
              <h5 class="text-muted fw-light">No conversations yet</h5>
            </div>
          <% else %>
            <% @conversations.each do |conversation| %>
              <%= link_to conversation_path(conversation), class: "text-decoration-none text-dark" do %>
                <div class="conversation-item d-flex justify-content-between align-items-center p-3 border-bottom hover-bg-light">
                  <div class="conversation-content">
                    <h5 class="mb-1 fw-semibold">
                      <%= conversation.participants.find { |p| p != current_user }.company_name %>
                    </h5>
                    <small class="text-muted text-truncate d-block">
                      <%= conversation.messages.last&.content || "No messages yet" %>
                    </small>
                  </div>
                  <%= link_to conversation_path(conversation),
                      data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure you want to delete this conversation?"
                      },
                      class: "btn btn-outline-danger btn-sm ms-3" do %>
                    <i class="fas fa-trash"></i>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<% content_for :styles do %>
  <style>
    .hover-bg-light:hover {
      background-color: rgba(0,0,0,0.03);
      transition: background-color 0.2s ease;
    }
    .conversation-item {
      transition: all 0.2s ease;
    }
    .conversation-content {
      max-width: 80%;
    }
  </style>
<% end %>