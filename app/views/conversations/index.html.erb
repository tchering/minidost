<%# # app/views/conversations/index.html.erb %>
<%= turbo_frame_tag "conversation_frame" do  %>
  <div class="container">
    <div class="horizontal-scroll-container">
      <% if @conversations.empty? %>
        <div class="text-center p-5">
          <h5 class="text-muted fw-light">No conversations yet</h5>
        </div>
      <% else %>
        <div class="conversation-wrapper d-flex">
          <% @conversations.each do |conversation| %>
            <%= link_to chat_conversation_path(conversation),data:{turbo_frame: "_top"}, class: "text-decoration-none text-dark" do %>
              <div class="conversation-card m-2">
                <div class="conversation-content text-center">
                  <% other_participant = conversation.participants.find {|p| p != current_user} %>
                  <%= image_tag(conversation.participants.find {|p| p != current_user}.logo.attached? ? conversation.participants.find {|p| p != current_user}.logo : "default_logo.png",class:"rounded-circle img-thumbnail",size:"50") %>
                  <%#!Notification unread_notifications_count is defined in conversations_helper.rb %>
                  <span class="badge rounded-pill badge-notification bg-danger">
                    <%= unread_notifications_count(conversation,current_user) %>
                  </span>
                  <%#!------------ %>
                  <h5 class="mb-1 fw-semibold">
                    <%= conversation.participants.find { |p| p != current_user }.company_name %>
                  </h5>
                  <small class="text-muted text-truncate d-block">
                    <%= conversation.messages.last&.content || "No messages yet" %>
                  </small>
                  <%= link_to conversation_path(conversation),
                      data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure you want to delete this conversation?"
                      },
                    class: "btn btn-outline-danger btn-sm mt-2" do %>
                    <i class="fas fa-trash"></i>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <% content_for :styles do %>
    <style>
      .horizontal-scroll-container {
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
        scrollbar-width: thin;
        padding: 1rem 0;
      }

      .conversation-wrapper {
        flex-wrap: nowrap;
        min-width: min-content;
      }

      .conversation-card {
        min-width: 200px;
        background: white;
        border: 1px solid rgba(0,0,0,0.1);
        border-radius: 8px;
        padding: 1rem;
        transition: all 0.2s ease;
      }

      .conversation-card:hover {
        background-color: rgba(0,0,0,0.03);
        transform: translateY(-2px);
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
      }

      .conversation-content {
        width: 100%;
      }

      /* Custom scrollbar styling */
      .horizontal-scroll-container::-webkit-scrollbar {
        height: 6px;
      }

      .horizontal-scroll-container::-webkit-scrollbar-track {
        background: #f1f1f1;
      }

      .horizontal-scroll-container::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 3px;
      }
    </style>
  <% end %>
<% end %>
