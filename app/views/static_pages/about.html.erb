<style>
    body {
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    min-height: 100vh;
}
.about-image {
    position: relative;
    overflow: hidden;
    border-radius: 15px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
}

.about-image:hover {
    transform: translateY(-5px);
}

.mission-card {
    border: none;
    border-radius: 12px;
    transition: all 0.3s ease;
}

.mission-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.12);
}

.feature-item {
    padding: 1rem;
    border-left: 4px solid #2196f3;
    margin-bottom: 1rem;
    background: rgba(33, 150, 243, 0.05);
}
</style>
<div class="container px-5">
    <div class="row align-items-center g-4">
        <!-- Left column with enhanced image -->
    <div class="col-lg-4">
            <div class="about-image">
        <img src="https://images.unsplash.com/photo-1541888946425-d81bb19240f5?q=80&w=500" 
             alt="Construction site with blueprints" 
                         class="img-fluid"
                         style="height: 450px; width: 100%; object-fit: cover;">
      </div>
    </div>

        <!-- Right column with enhanced content -->
    <div class="col-lg-8">
            <div class="mission-card mb-4">
                <div class="card-body p-4">
                    <h3 class="h2 mb-4 fw-bold"><%= t("mission.title") %></h3>
                    <p class="lead text-muted"><%= t("mission.description") %></p>
                 </div>
             </div>
            <div class="mission-card mb-4">
                <div class="card-body p-4">
                    <h3 class="h2 mb-4 fw-bold"><%= t("solution.title") %></h3>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="feature-item">
                                <i class="fas fa-chart-line fa-lg text-primary mb-2"></i>
                                <h4 class="h5 fw-bold"><%= t("solution.management.title") %></h4>
                                <p class="mb-0 text-muted"><%= t("solution.management.description") %></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="feature-item">
                                <i class="fas fa-building fa-lg text-primary mb-2"></i>
                                <h4 class="h5 fw-bold"><%= t("solution.support.title") %></h4>
                                <p class="mb-0 text-muted"><%= t("solution.support.description") %></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="feature-item">
                                <i class="fas fa-map-marked-alt fa-lg text-primary mb-2"></i>
                                <h4 class="h5 fw-bold"><%= t("solution.location.title") %></h4>
                                <p class="mb-0 text-muted"><%= t("solution.location.description") %></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="feature-item">
                                <i class="fas fa-chart-bar fa-lg text-primary mb-2"></i>
                                <h4 class="h5 fw-bold"><%= t("solution.finance.title") %></h4>
                                <p class="mb-0 text-muted"><%= t("solution.location.description") %></p>
                            </div>
                        </div>
                    </div>
        </div>
      </div>

            <div class="text-center mt-5">
                <p class="h3 mb-4">Transform your business management today</p>
                <%= link_to new_user_registration_path, class: "btn btn-primary btn-lg px-5 py-3 shadow-sm" do %>
                    <i class="fas fa-rocket me-2"></i>Get Started
                <% end %>
      </div>
    </div>
  </div>
</div>