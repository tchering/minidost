<div class="construction-stats container-fluid px-3">
  <div class="row g-3">
    <!-- Pending Tasks -->
    <div class="col-md-3">
      <%= link_to tasks_path(status: "pending"), 
                  class: "stat-card pending", 
                  data: { turbo_frame: "map_frame" } do %>
        <div class="stat-content">
          <div class="stat-icon">
            <i class="fas fa-clock"></i>
          </div>
          <div class="stat-info">
            <h6><%= t("task.status_pending") %></h6>
            <h2>
              <%= @user.created_tasks.where(status: "pending").count %>
            </h2>
          </div>
        </div>
      <% end %>
    </div>
    <!-- Active Tasks -->
    <div class="col-md-3">
      <%= link_to tasks_path(status: "active"), 
                  class: "stat-card active", 
                  data: { turbo_frame: "map_frame" } do %>
        <div class="stat-content">
          <div class="stat-icon">
            <i class="fas fa-tools"></i>
          </div>
          <div class="stat-info">
            <h6><%= t("task.status_active") %></h6>
            <h2><%= @user.created_tasks.where(status: "active").count %>
              <%#to Passed from UsersController -> show -> _user.html.erb -> partial: "tasks/task_status" %>
              <%# i have removed notification from here %>
            </h2>
          </div>
        </div>
      <% end %>
    </div>
    <%# Approved Applications %>
    <div class="col-md-4 col-lg-3">
      <%= link_to tasks_path(application_status: "approved"), 
              class: "stat-card stat-card-approved", 
              data: { turbo_frame: "map_frame" } do %>
        <div class="stat-content">
          <div class="stat-icon">
            <i class="fas fa-check"></i>
          </div>
          <div class="stat-info">
            <h6 class="stat-title"><%= t("task.tasks_approved") %></h6>
            <h2 class="stat-number">
              <%= TaskApplication.joins(:task)
                           .where(tasks: { contractor_id: @user.id }, 
                                  application_status: "approved")
                           .count %>
            </h2>
          </div>
        </div>
      <% end %>
    </div>
    <!-- In Progress Tasks -->
    <div class="col-md-3">
      <%= link_to tasks_path(status: "in progress"), 
                  class: "stat-card in-progress", 
                  data: { turbo_frame: "map_frame" } do %>
        <div class="stat-content">
          <div class="stat-icon">
            <i class="fas fa-hammer"></i>
          </div>
          <div class="stat-info">
            <h6><%= t("task.status_in_progress") %></h6>
            <h2><%= @user.created_tasks.where(status: "in progress").count %></h2>
          </div>
        </div>
      <% end %>
    </div>
    <!-- Completed Tasks -->
    <div class="col-md-3">
      <%= link_to tasks_path(status: "completed"), 
                  class: "stat-card completed", 
                  data: { turbo_frame: "map_frame" } do %>
        <div class="stat-content">
          <div class="stat-icon">
            <i class="fas fa-check-circle"></i>
            <% if @completed_notifications&.positive? %>
            <% end %>
          </div>
          <div class="stat-info">
            <h6><%= t("task.status_completed") %></h6>
            <h2><%= @user.created_tasks.where(status: "completed").count %></h2>
          </div>
        </div>
      <% end %>
    </div>
    <% if current_user == @user %>
      <%# Conversations %>
      <div class="col-md-4 col-lg-3">
        <%= link_to conversations_path, class: "stat-card stat-card-conversations", data:{turbo_frame: "map_frame"} do %>
          <div class="stat-content">
            <div class="stat-icon">
              <i class="fas fa-comment"></i>
            </div>
            <div class="stat-info">
              <h6 class="stat-title"><%= t("task.conversations") %></h6>
              <h2 class="stat-number"><%= @user.conversations.count %></h2>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<style>
  .construction-stats {
    font-family: 'Inter', sans-serif;
    padding: 0.5rem 0;
  }

  .stat-card {
    display: block;
    text-decoration: none;
    background: white;
    border-radius: 8px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    border: 1px solid #e9ecef;
    margin-bottom: 1rem;
    min-height: 96px; /* Ensures consistent height */
  }

  .stat-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
  }

  .stat-content {
    display: flex;
    align-items: center;
    padding: 1rem;
    gap: 1rem;
    height: 100%; /* Fill the card height */
  }

  .stat-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border-radius: 8px;
    opacity: 0.9;
  }

  .pending .stat-icon {
    background-color: rgba(255, 193, 7, 0.15);
    color: #ffc107;
  }

  .active .stat-icon {
    background-color: rgba(13, 110, 253, 0.15);
    color: #0d6efd;
  }

  .in-progress .stat-icon {
    background-color: rgba(23, 162, 184, 0.15);
    color: #17a2b8;
  }

  .completed .stat-icon {
    background-color: rgba(40, 167, 69, 0.15);
    color: #28a745;
  }

  .stat-info {
    flex-grow: 1;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center; /* Vertically center content */
  }

  .stat-info h6 {
    color: #6c757d;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 0.25rem;
  }

  .stat-info h2 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #212529;
    margin: 0;
  }


  @media (max-width: 768px) {
    .stat-card {
      margin-bottom: 0.75rem;
      min-height: 84px;
    }

    .stat-content {
      padding: 0.75rem;
      gap: 0.75rem;
    }

    .stat-icon {
      width: 40px;
      height: 40px;
    }

    .stat-info h2 {
      font-size: 1.25rem;
    }

    .notification-badge {
      font-size: 0.65rem;
      min-width: 1.25rem;
    }
  }

  @media (max-width: 480px) {
    .notification-badge {
      top: -20px;
      right: -180px;
      font-size: 0.6rem;
      min-width: 1rem;
    }
  }
</style>