<%# app/views/tasks/_common_fields.html.erb %>
<div class="col-12">
  <%# Site Information %>
  <div class="mb-4">
    <h6 class="text-muted mb-3">Site Information</h6>
    <div class="row g-3">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :site_name, class: 'form-label' %>
          <%= f.text_field :site_name, class: 'form-control' %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :street, class: 'form-label' %>
          <%= f.text_field :street, class: 'form-control' %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :city, class: 'form-label' %>
          <%= f.text_field :city, class: 'form-control' %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :area_code, class: 'form-label' %>
          <%= f.text_field :area_code, class: 'form-control' %>
        </div>
      </div>
    </div>
  </div>

  <%# Price Information %>
  <div class="mb-4">
    <h6 class="text-muted mb-3">Price Details</h6>
    <div class="row g-3">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :proposed_price, class: 'form-label' %>
          <%= f.number_field :proposed_price, class: 'form-control', step: '0.01' %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :accepted_price, class: 'form-label' %>
          <%= f.number_field :accepted_price, class: 'form-control', step: '0.01' %>
        </div>
      </div>
    </div>
  </div>

  <%# Schedule Information %>
  <div class="mb-4">
    <h6 class="text-muted mb-3">Schedule</h6>
    <div class="row g-3">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :start_date, class: 'form-label' %>
          <%= f.date_field :start_date, class: 'form-control' %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :end_date, class: 'form-label' %>
          <%= f.date_field :end_date, class: 'form-control' %>
        </div>
      </div>
    </div>
  </div>

  <%# Status Information %>
  <div class="mb-4">
    <h6 class="text-muted mb-3">Status</h6>
    <div class="row g-3">
      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :status, class: 'form-label' %>
          <%= f.select :status, ['pending', 'in progress', 'completed'], {}, class: 'form-select' %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :work_progress, class: 'form-label' %>
          <%= f.text_field :work_progress, class: 'form-control' %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :billing_process, class: 'form-label' %>
          <%= f.text_field :billing_process, class: 'form-control' %>
        </div>
      </div>
    </div>
  </div>
</div>