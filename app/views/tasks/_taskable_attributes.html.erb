<%# app/views/tasks/_taskable_attributes.html.erb %>
<div class="row g-4">
  <%# Text Attributes %>
  <% groups[:text_attributes].each do |name, value| %>
    <div class="col-md-6">
      <div class="attribute-group">
        <label class="text-muted"><%= name.humanize %></label>
        <p class="mb-0"><%= value.presence || 'N/A' %></p>
      </div>
    </div>
  <% end %>
  <%# Measurements %>
  <% if groups[:measurements].present? %>
    <div class="col-12">
      <h6 class="mb-3">Measurements</h6>
      <div class="row g-3">
        <% groups[:measurements].each do |name, value| %>
          <div class="col-md-4">
            <div class="attribute-group">
              <label class="text-muted"><%= name.humanize %></label>
              <p class="mb-0"><%= value %> mÂ²</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
  <%# Boolean Services %>
  <% if groups[:boolean_services].present? %>
    <div class="col-12">
      <h6 class="mb-3">Services</h6>
      <div class="row g-3">
        <% groups[:boolean_services].each do |name, value| %>
          <div class="col-md-4">
            <div class="form-check">
              <input type="checkbox" class="form-check-input" disabled <%= 'checked' if value %>>
              <label class="form-check-label"><%= name.humanize %></label>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
