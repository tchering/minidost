<%# app/views/task_applications/review_application.html.erb %>
<div class="container-fluid py-4">
  <div class="row justify-content-center">
    <div class="col-xxl-9">
      <%# Main Card %>
      <div class="card shadow-lg border-0">
        <%# Header %>
        <div class="card-header gradient-primary p-4">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h2 class="text-white mb-0">Application Review</h2>
              <p class="text-white-50 mb-0">Reference: #<%= @application.id %></p>
            </div>
            <div class="d-flex gap-3">
              <div class="text-end">
                <span class="d-block text-white-50 small">Task Budget</span>
                <span class="badge bg-white text-primary px-3 py-2">
                  <%= number_to_currency(@task.proposed_price, unit: "€") %>
                </span>
              </div>
              <div class="text-end">
                <span class="d-block text-white-50 small">Proposal</span>
                <span class="badge bg-white text-primary px-3 py-2">
                  <%= number_to_currency(@application.proposed_price, unit: "€") %>
                </span>
              </div>
            </div>
          </div>
        </div>
        <div class="card-body p-4">
          <div class="row g-4">
            <%# Left Column %>
            <div class="col-lg-4">
              <%# Subcontractor Profile Card %>
              <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                  <%= image_tag(
                    @subcontractor.logo.attached? ? @subcontractor.logo : "default_logo.png",
                    class: "rounded-circle mb-3 border border-2 border-light shadow-sm",
                    style: "width: 120px; height: 120px; object-fit: cover;"
                  ) %>
                  <h4 class="mb-1"><%= @subcontractor.full_name %></h4>
                  <p class="text-primary mb-2"><%= @subcontractor.company_name %></p>
                  <p class="badge bg-light text-dark mb-3"><%= @subcontractor.legal_status %></p>
                  <hr class="my-3">
                  <div class="contact-details text-start">
                    <div class="mb-2">
                      <i class="fas fa-envelope text-primary"></i>
                      <%= @subcontractor.email %>
                    </div>
                    <div class="mb-2">
                      <i class="fas fa-phone text-primary"></i>
                      <%= @subcontractor.phone_number %>
                    </div>
                    <div>
                      <i class="fas fa-map-marker-alt text-primary"></i>
                      <%= @subcontractor.address %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <%# Right Column %>
            <div class="col-lg-8">
              <%# Professional Details %>
              <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-light py-3">
                  <h5 class="mb-0">Professional Details</h5>
                </div>
                <div class="card-body">
                  <div class="row g-3">
                    <div class="col-md-6">
                      <div class="detail-item">
                        <label class="small text-muted">Experience</label>
                        <div class="d-flex align-items-center">
                          <i class="fas fa-briefcase text-primary me-2"></i>
                          <span><%= @application.experience %> years</span>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="detail-item">
                        <label class="small text-muted">Insurance</label>
                        <div class="d-flex align-items-center">
                          <i class="fas fa-shield-alt text-primary me-2"></i>
                          <span><%= @application.insurance_status %></span>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-12 col-md-6"> <!-- Changed col-6 to col-12 col-md-6 for responsiveness -->
                        <div class="detail-item">
                          <label class="small text-muted">Skills</label>
                          <div class="d-flex align-items-center flex-wrap gap-2">
                            <% @application.skills.to_s.split(',').each do |skill| %>
                              <span class="badge bg-light text-dark text-wrap"> <!-- Added text-wrap -->
                                <%= skill.strip %>
                              </span>
                            <% end %>
                          </div>
                        </div>
                      </div>
                      <div class="col-6">
                        <div class="detail-item">
                          <label class="small text-muted">Status</label>
                          <div class="d-flex align-items-center flex-wrap gap-2">
                            <% status_class = case @application.application_status 
                              when 'pending'  then 'bg-warning text-dark'
                              when 'approved' then 'bg-success text-white'
                              when 'rejected' then 'bg-danger text-white'
                              else 'bg-secondary text-white'
                            end %>
                            <span class="badge <%= status_class %> px-3 py-2">
                              <%= @application.application_status.titleize %>
                            </span>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <%# Project Proposal %>
              <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-light py-3">
                  <h5 class="mb-0">Project Proposal</h5>
                </div>
                <div class="card-body">
                  <div class="row g-4">
                    <div class="col-md-6">
                      <h6>Timeline</h6>
                      <p class="mb-0"><%= @application.completion_timeframe %></p>
                    </div>
                    <div class="col-md-6">
                      <h6>Payment Terms</h6>
                      <p class="mb-0"><%= @application.payment_terms %></p>
                    </div>
                    <div class="col-12">
                      <h6>Cover Letter</h6>
                      <p class="mb-0"><%= @application.cover_letter.presence || 'No cover letter provided' %></p>
                    </div>
                    <div class="col-12">
                      <h6>References</h6>
                      <p class="mb-0"><%= @application.references.presence || 'No references provided' %></p>
                    </div>
                  </div>
                </div>
              </div>
              <%# Decision Form %>
              <div class="card border-0 shadow-sm">
                <div class="card-header bg-light py-3">
                  <div class="d-flex align-items-center">
                    <h5 class="mb-0">Application Decision</h5>
                    <div class="d-flex align-items-center flex-wrap gap-2">
                      <% status_class = case @application.application_status 
                              when 'pending'  then 'bg-warning text-dark'
                              when 'approved' then 'bg-success text-white'
                              when 'rejected' then 'bg-danger text-white'
                              else 'bg-secondary text-white'
                            end %>
                      <span class="badge <%= status_class %> px-3 py-2">
                        <%= @application.application_status.titleize %>
                      </span>
                    </div>
                  </div>
                </div>
                <div class="card-body">
                  <% if current_user.contractor? %>
                    <%= form_with(url: approve_application_task_task_application_path(@task, @application), 
                                method: :post,
                                data: { turbo_confirm: "Are you sure you want to approve this application?" },
                                local: true) do |f| %>
                      <div class="row">
                        <div class="col-md-6">
                          <div class="form-group mb-3">
                            <%= label_tag :proposed_price, "Subcontractor's Proposed Price", class: "form-label" %>
                            <div class="input-group">
                              <%= number_field_tag :proposed_price, 
                                @application.proposed_price, 
                                class: "form-control",
                                disabled: true %>
                              <span class="input-group-text">€</span>
                            </div>
                          </div>
                        </div>
                        <div class="col-md-6">
                          <div class="form-group">
                            <%= label_tag :accepted_price, "Final Agreed Price", class: "form-label" %>
                            <div class="input-group">
                              <%= number_field_tag :accepted_price, 
                                @application.proposed_price,
                                step: "0.01", 
                                class: "form-control",
                                required: true %>
                              <span class="input-group-text">€</span>
                            </div>
                          </div>
                        </div>
                      </div>
                      
                      <div class="col-12 d-flex gap-2 justify-content-end mt-4">
                        <%= link_to :back, class: "btn btn-light" do %>
                          <i class="fas fa-arrow-left me-2"></i>Back
                        <% end %>
                        
                        <%= button_to reject_application_task_task_application_path(@task, @application),
                            method: :post,
                            class: "btn btn-outline-danger",
                            form_class: "d-inline-block",
                            form: { data: { turbo_confirm: "Are you sure you want to reject this application?" }} do %>
                          <i class="fas fa-times me-2"></i>Reject
                        <% end %>

                        <%= button_tag type: :submit, class: "btn btn-success" do %>
                          <i class="fas fa-check me-2"></i>Approve
                        <% end %>
                      </div>
                    <% end %>
                  <% else %>
                    <%= button_to task_task_application_path(@task, @application),
                                  method: :delete,
                                  data: { turbo_confirm: t('task.delete_turbo_confirm') },
                                  class: "btn btn-danger btn-rounded" do %>
                      <i class="fas fa-times me-2"></i><%= t('task.buttons.delete_interest') %>
                    <% end %>
                  <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <style>
    .badge {
      max-width: 100%;
      white-space: normal; /* Allow text to wrap */
      word-break: break-word;
      margin: 2px;
    }

    .detail-item {
      padding: 10px;
      overflow-wrap: break-word;
    }

    @media (max-width: 768px) {
      .badge {
        font-size: 0.8rem;
        padding: 0.25rem 0.5rem;
      }
    }
      body {
        background-color: #f8f9fa;
        font-family: 'Inter', system-ui, sans-serif;
      }

      .gradient-primary {
        background: linear-gradient(135deg, #3f51b5, #2196f3);
      }

      .card {
        border-radius: 0.75rem;
      }

      .card-header {
        border-bottom: 1px solid rgba(0,0,0,0.05);
      }

      .detail-item {
        margin-bottom: 1rem;
      }

      .detail-item label {
        display: block;
        margin-bottom: 0.25rem;
      }

      .contact-details i {
        width: 20px;
        margin-right: 8px;
      }

      .btn {
        padding: 0.5rem 1rem;
        font-weight: 500;
        border-radius: 0.5rem;
      }

      .form-control {
        border-radius: 0.5rem;
      }

      .input-group-text {
        border-radius: 0 0.5rem 0.5rem 0;
      }
  </style>